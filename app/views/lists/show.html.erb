<div class="container text-center">
  <h2 class="space"><%= @list.title %></h2>
  #1. <%= @list.number1 %><br>
  #2. <%= @list.number2 %><br>
  #3. <%= @list.number3 %><br>
  #4. <%= @list.number4 %><br>
  #5. <%= @list.number5 %><br>
<br>
  <p>Rating: <%= @list_rating %><p>
  <p class="space">Topics:</p>
    <% @list.topics.each do |topic| %>
      <i><%= topic.name %></i>
  <% end %>
  <br>
  <br>
  <% if current_user %>
      <%= form_for @rating, url: list_ratings_path(@list, @rating) do |rate| %>
      <%= rate.number_field :rating, :in => 1..10 %>
      <%= rate.submit "Rate This List (1-10)" %>
    <% end %>
    <% if current_user.lists.exists?(@list.id) %>
          <br>
      <%= link_to "Edit List", edit_user_list_path(@list.user, @list) %><br>
      <%= link_to 'Delete List', destroy_list_path(@list), method: "post" %>
    <% end %>
  <% end %>
</div>